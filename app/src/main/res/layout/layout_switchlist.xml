<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_switchID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/textview_flow"
        android:text="Switch ID" />

    <TextView
        android:id="@+id/textview_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="flow(Bytes)" />

    <ListView
        android:id="@+id/list_switch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textview_switchID">

    </ListView>

    <Button
        android:id="@+id/button_backToController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="上一頁" />

</RelativeLayout>
