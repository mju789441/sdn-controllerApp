<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_host_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Host port" />

    <TextView
        android:id="@+id/textView_host_curr_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="curr_speed(kbps)" />

    <ListView
        android:id="@+id/listView_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView_switchID">

    </ListView>

    <Button
        android:id="@+id/button_backToSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="上一頁" />

</RelativeLayout>
